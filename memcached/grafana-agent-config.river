prometheus.remote_write "default" {
        endpoint {
                url     = "http://10.0.6.7:9009/api/v1/push"
                headers = {
                        "X-Scope-Orgid" = "local_apt",
                }

                queue_config {
                        capacity             = 2500
                        max_shards           = 200
                        max_samples_per_send = 500
                }

                metadata_config {
                        max_samples_per_send = 500
                }
        }
}
