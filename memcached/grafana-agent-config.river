prometheus.exporter.memcached "memcached1" {
  address = "memcached1:11211"
}

prometheus.scrape "memcached1" {
  targets    = prometheus.exporter.memcached.memcached1.targets
  forward_to = [prometheus.remote_write.default.receiver]
}

